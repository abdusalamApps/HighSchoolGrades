<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.MeritRaknare.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.MeritRaknare.TextInputLayout.HintText</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="TextAppearance.MeritRaknare.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/colorPrimaryDark</item>
    </style>

    <!-- Style for options in the order form -->
    <style name="FormTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="EditorTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
