<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:defaultDuration="256">

    <Transition
        android:id="@+id/slide_up"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:motionInterpolator="easeInOut">
        <OnClick app:targetId="@id/comparisonSum_btn" />

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/dialog_card">
                <CustomAttribute
                    app:attributeName="radius"
                    app:customDimension="15dp" />
            </KeyAttribute>
            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/dialog_card">
                <CustomAttribute
                    app:attributeName="radius"
                    app:customDimension="15dp" />
            </KeyAttribute>

        </KeyFrameSet>
    </Transition>

    <Transition
        app:constraintSetEnd="@id/enlarge"
        app:constraintSetStart="@id/end"
        app:motionInterpolator="easeInOut">
        <OnClick app:targetId="@id/options_tv" />

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/dialog_card">
                <CustomAttribute
                    app:attributeName="radius"
                    app:customDimension="15dp" />

            </KeyAttribute>
            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/dialog_card">
                <CustomAttribute
                    app:attributeName="radius"
                    app:customDimension="0dp" />
            </KeyAttribute>

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/dialog_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/dialog_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/enlarge">
        <Constraint
            android:id="@+id/dialog_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

</MotionScene>